// utils/tokenUtils.js
const jwt = require('jsonwebtoken');

const generateToken = (user) => {
    const payload = {
        id: user.id,
        username: user.username,
        // Add any other user-specific information you want to include
    };

    // Generate a token with a secret key and an expiration time
    const token = jwt.sign(payload, process.env.JWT_SECRET, { expiresIn: '1h' }); // Token expires in 1 hour
    return token;
};

module.exports = { generateToken };